    private void jMenuItemClienteActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        
        try {
         conecta.execultaSQL("select * from clientes");
        JRResultSetDataSource relatResl = new JRResultSetDataSource(conecta.rs);
        JasperPrint jpPrint = JasperFillManager.fillReport("ireport/RelatorioBrCliente.jasper",new HashMap(),relatResl);
            JasperViewer jv = new JasperViewer(jpPrint,false);
            jv.setVisible(true);
        } catch (JRException ex) {
            Logger.getLogger(Principal.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                                

    private void jMenuItem9ActionPerformed(java.awt.event.ActionEvent evt) {                                           
      try {
         conecta.execultaSQL("select * from fornecedores");
        JRResultSetDataSource relatResl = new JRResultSetDataSource(conecta.rs);
        JasperPrint jpPrint = JasperFillManager.fillReport("ireport/Fornecedores.jasper",new HashMap(),relatResl);
            JasperViewer jv = new JasperViewer(jpPrint,false);
            jv.setVisible(true);
        } catch (JRException ex) {
            Logger.getLogger(Principal.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                          

