    private void jMenuItem11ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
       
        try {
             conecta.execultaSQL("select * from login where login ='"+jLabelUser.getText()+"'");
            conecta.rs.first();
            if(conecta.rs.getString("permicao").equals("Administrador")){
          FrmCadLogin frm = new FrmCadLogin ();
        frm.setVisible(true);
            }else{
            JOptionPane.showMessageDialog(rootPane, "voce nao possui permiss√£o para acessar este modulo");
            }
        } catch (SQLException ex) {
           JOptionPane.showMessageDialog(rootPane,"voce nao possui permissao"+ ex);
        }
     
        
    }                                           

